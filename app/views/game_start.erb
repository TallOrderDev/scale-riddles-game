<div class="container">
  <div id="game-data">
    <h3>You have <span id="count"><%= @game.weigh_count %></span> more uses of the scales.</h3>
    <h5>Click a Ball, and assign it to a side.</h5>
    <h5>Then Click; </h5>
  </div>
  <form class="button" id="weigh-button" action=""><button>Weight</button></form>
  <form class="button" id="reset-button" action=""><button>Reset</button></form>
  <div class="scale-container">
    <div class="center"><img class="scale" id="even" src="/scales/scale_even.png"></div>
  </div>
  <div class="scale-area-container">
    <section class="scale-area" id="left-container">
      <H1>LEFT SIDE</H1>
    </section>
    <section class="scale-area" id="right-container">
    <h1>RIGHT SIDE</h1>
    </section>
  </div>
  <div id="balls-container">
    <% @balls.each do |ball|  %>
      <img class="ball not" alt="<%= ball.number %>" id="<%= ball.number %>" src="/pool_balls/ball-<%= ball.number %>.png">
    <% end %>
  </div>
</div>
